{{!--  update and delete for blog --}}
<div class="blog-card">
  <h2>{{blog.title}}</h2>
  <p>{{blog.content}}</p>
  <div class="blog-card-footer">
    <h4>- {{blog.user.name}}</h4>
  </div>
</div>


<div class="row">
  <div class="col-md-6">
    <h2>Create new comment</h2>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="content">content:</label>
        <textarea class="form-input" type="text" id="content" rows="5"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
  </div>
</div>

<div>
  {{#each blog.comments as |comment| }}
  {{!-- delete for comment --}}
      <div class="blog-card">
        <p>{{comment.comment}}</p>
        <div class="blog-card-footer">
          <h4>- {{comment.user.name}}</h4>
        </div>
     </div>
    {{/each}}
</div>

<script src="/js/new-comment.js"></script>